rules_version = '2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: allow users to read their own doc; block all writes from client.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update, delete: if false; // Writes only via Admin SDK (Cloud Functions)
    }

    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
